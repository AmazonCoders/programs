import java.io.*;
import java.util.*;

class node 
{
    int data;
    node next;
}

class Queue
{  
    public static void main(String args[])
    {
        Scanner s=new Scanner(System.in);
        node head=null;
        s1 s2=new s1();
        int ch;
        boolean n=true;
        while(n)
        {
            System.out.println("Enter your choice\n1.Enque\n2.Deque\n3.Display\n4.Exit\n");
            ch=s.nextInt();
            switch(ch)
            {
                case 1:
                System.out.println("Enter a number\n");
                int i=s.nextInt();
                head=s2.enque(head,i);
                break;
                    
                case 2:
                head=s2.deque(head);
                break;
                    
                case 3:
                s2.disp(head);
                break;
                    
                case 4:
                n=false;
                break;
                    
                default :
                System.out.println("Invalid option");
          }
       }
    }
}

class s1
{
    public node  enque(node head,int i)
    {
        node p=new node();
        p.data=i;
        p.next=null;
        if(head==null)
            head=p;
        else 
        {
            node temp=head;
            while(temp.next!=null)
                temp=temp.next;
            
            temp.next=p;
        }
        return head;
    }
    
    public node deque(node head)
    {
        if(head==null)
        {
            System.out.println("The Queue is Empty\n");
        }
        
        else
        {
            node temp=head;
            head=temp.next;
            System.out.println("The dequed element is "+temp.data);
            temp.next=null;
        }
        return head;
     }
    
     public void disp(node head)
     {
        node temp=head;
        while(temp.next!=null)
        {
            System.out.print(temp.data+"\t");
            temp=temp.next;
        }
        System.out.println(temp.data);
     }
}
